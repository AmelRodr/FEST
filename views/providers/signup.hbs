<h2>Signup</h2>

<form action="/providers/signup" method="POST" id="form-container">

  <label for="email">Email</label>
  <input type="email" name="email" id="" placeholder="ejemplo@algo.com">

  <br><br>

  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="MiEmpresa">

  <label for="name">El nombre de tu empresa</label>
  <input id="name" type="text" name="name" placeholder="Luz y Sonido">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>

  <label for="bio">Descripción y Servicios</label>
  <textarea id="bio" type="text" name="bio" placeholder="Descripción de su empresa y servicios que ofrecen"></textarea>
  <br>

   <label for="category">Categoría</label>
    <select id="category" name="category">
     <option value="Musica">Musica</option> 
     <option value="Animación">Animación</option>
     <option value="Gastronomía">Gastronomía</option>
     <option value="Juegos">Juegos</option>
     <option value="Bebidas">Bebidas</option>
     <option value="Decoración y Ambiente">Decoración y Ambiente</option>
     <option value="Video y Fotografía">Video y Fotografía</option>
    </select>
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>