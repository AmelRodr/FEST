<div class="pro-profile-container">
  <div style="margin:0 auto;" class="row">
    <div class="col-3">
      {{#if photoURL}}
        <img src="{{photoURL}} " alt="">
      {{else}}
        <img class="profile-pic" src="/images/photo-placeholder.png" alt="">
      {{/if}}
    </div>
    <div class="profile-detail col-6">
      <h1>{{username}}</h1>
      <br>
      <h5>Calificación :</h5>
      <p class="badge badge-warning">{{rating}}</p>
      <br>
      <p>Categoría : {{category}}</p>
      <p>Descripción : {{bio}}</p>
      <br>
      <a href="mailto:{{email}}"><button class="btn btn-dark">Contact</button></a>
    </div>
    <div class="col-2">
      <a href="/providers/{{username}}/edit"><button class="btn btn-dark">Edit Profile</button></a>
    </div>
  </div>

</div>
<section class="comments-section">
  <!-- Write a comment -->
  <div class="write-comment container">
    <form action="/comments" method="POST">
      <div class="form-group">
        <label class="form-title" for="comment">Escribe un comentario</label>
        <textarea class="form-control" id="comment" name="text" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="rating">Calificar este proveedor</label>
        <select class="form-control" id="rating">
          <option name="rating" value="EXCELENTE">Excelente</option>
          <option name="rating" value="NORMAL">Normal</option>
          <option name="rating" value="MALO">Malo</option>
        </select>
  </div>
      <input class="btn btn-secondary" type="submit" value="Publicar">
    </form>   
  </div>

  <!-- Display comments -->
  <article style="padding:50px;" class="container">
    {{#each comments}}
      <div class="dashed-container row">
        <div class="col-2">
          <p><img style="width:5rem;height:5rem;" src="{{this.user.photoURL}}" alt="">{{this.user.username}}</p>
        </div>
        <div class="col-10">
          <h5>Calificación :</h5>
          <p class="badge badge-warning">{{rating}}</p>
          <p>{{this.text}}</p>
        </div>
      </div> 
    {{/each}}     
  </article>
</section>