<div class="row">
  <div class="login-rc col-8">
    <div style="width:70%;margin:0 auto;">
      <form action="/auth/signup" method="POST">
        <h2>Registrate</h2>
        <br>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="cliente" value="Cliente" checked>
          <label class="form-check-label" for="cliente">
            Soy cliente
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="empresa" value="Empresa">
          <label class="form-check-label" for="empresa">
            Soy una empresa
          </label>
        </div>
        <br>
        <div class="form-group">
          <label for="email">Correo electronico</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="ejemplo@algo.com">
        </div>
        <br>
        <div class="form-group">
          <label for="username">Usuario</label>
          <input type="text" name="username" class="form-control" id="username" placeholder="JonSnow">
        </div>
        <br>
        <div class="form-group">
          <label for="password">Contraseña</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="Tu contraseña">
        </div>
        {{#if message }}
          <div class="error-message">{{ message }}</div>
        {{/if}}
        <br>
        <p class="account-message">
          Ya tienes cuenta?
          <a href="/auth/login">Iniciar sesión</a>
        </p>
        <br>
        <button type="submit" class="btn btn-danger">Registrar</button>
      </form>
    </div>
  </div>

  <div class="U-reg-right col-4">
    <div class="logo-centered">
      <img class="logo-img" src="/images/logo.svg" alt="Fest Logo">
    </div>
  </div>
</div>
